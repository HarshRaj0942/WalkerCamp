<%- include ("partials/header") %>



<div class="container">
<header class="jumbotron">
<div class="container">
<h1>Welcome to the WalkerCamp!</h1>
<p>Take a look at some of the best camping grounds in India!</p>
<p>
 <a class="btn btn-primary btn-lg" href="/campgrounds/new">Create New Campground!</a>
 </p>
 </div>
</header>


<div class="row text-center" style ="display:flex; flex-wrap: wrap;">
    <% campgrounds.forEach(function(camps) { %>

    <div class="col-md-3 col-sm-6">
        <%#   Here, we write the <percentage operator inside the quotes since the operator only sends the string over, without the quotes%>
       <div class="thumbnail"> 
        <img src = "<%= camps.image%>">
        <div class="caption">
         <h4> <%= camps.name %></h4>
        </div> 
        <p>
         <a href="/campgrounds/<%= camps._id%>" class="btn btn-primary">More Info</a>
        </p>
       </div> 
    </div> 


<%});%>
</div>
</div>
  <%- include ("partials/footer") %>